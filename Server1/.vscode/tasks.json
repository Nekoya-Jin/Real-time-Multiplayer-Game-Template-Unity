{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "빌드 (Build)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "코드 스타일 수정 (Fix Code Style)",
			"type": "shell",
			"command": "dotnet-format",
			"args": [
				"--verbosity",
				"diagnostic"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "전체 정리 (Clean All)",
			"type": "shell",
			"command": "./fix_csharp_issues.sh",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "서버 실행 (Run Server)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"Server"
			],
			"group": "test",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "클라이언트 실행 (Run DummyClient)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"DummyClient"
			],
			"group": "test",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": []
		},
		{
			"label": "build-server",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"Server/Server.csproj",
				"--configuration",
				"Debug"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "build-dummyclient",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"DummyClient/DummyClient.csproj",
				"--configuration",
				"Debug"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "build-all",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Debug"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "start-server-and-wait",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"Server"
			],
			"group": "test",
			"isBackground": true,
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Building.*$",
					"endsPattern": "^.*Listening.*$"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "start-client-after-server",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"DummyClient"
			],
			"group": "test",
			"dependsOn": "start-server-and-wait",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}